{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Patcher",
    "version": "0.1.0-alpha1",
    "identifier": "com.xylobyte.patcher",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Patcher",
                "width": 1080,
                "height": 700,
                "minWidth": 850,
                "minHeight": 540,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
