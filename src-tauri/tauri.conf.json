{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "patcher",
        "version": "0.1.0-alpha1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": "^(\\/|[a-zA-Z]:\\\\).*"
            },
            "window": {
                "all": false,
                "startDragging": true,
                "maximize": true,
                "unmaximize": true
            },
            "path": {
                "all": true
            },
            "dialog": {
                "message": true,
                "open": true
            },
            "clipboard": {
                "writeText": true
            }
        },
        "windows": [
            {
                "label": "main",
                "title": "Patcher",
                "width": 1080,
                "height": 700,
                "minWidth": 850,
                "minHeight": 540,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.xylobyte.patcher",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
